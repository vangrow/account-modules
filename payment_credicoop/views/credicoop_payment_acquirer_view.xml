<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Credicoop Payment Acquirer FORM view -->
    <record model="ir.ui.view" id="credicoop_payment_acquirer_form_view">
        <field name="name">credicoop_payment_acquirer_form_view</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="before">
                <page string="Credicoop Configuration" name="credicoop_configuration" attrs="{'invisible': [('provider', '!=', 'ccoopdd')]}">
                    <group>
                        <group attrs="{'invisible': [('provider', '!=', 'ccoopdd')]}" string="Banco Credicoop DÃ©bitos">
                            <field name="credicoop_company" attrs="{'required': [('provider', '=', 'ccoopdd')]}" />
                            <field name="credicoop_frequency" attrs="{'required': [('provider', '=', 'ccoopdd')]}" />
                            <field name="credicoop_bank" attrs="{'required': [('provider', '=', 'ccoopdd')]}" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>