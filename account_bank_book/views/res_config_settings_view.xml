<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--BankBook Config Settings FORM view-->
    <record id="bankbook_config_settings_form_view" model="ir.ui.view">
        <field name="name">bankbook_config_settings_form_view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//t[@groups='account.group_account_user']" position="after">
                <t groups="account.group_account_user">
                    <h2>Bank Book</h2>
                    <div class="row mt16 o_settings_container" name="bank_book">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="bank_book_domain" />
                                <div class="text-muted">Default Bank Book Domain.</div>
                                <field name="bank_book_domain" widget="domain" options="{'model': 'account.move.line', 'in_dialog': true}"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="create_bank_book_entries" />
                                <div class="text-muted">Create Bank Book entries.</div>
                                <field name="create_bank_book_entries" />
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
        